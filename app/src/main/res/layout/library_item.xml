<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/library_item_image"
        android:layout_width="@dimen/library_item_image_width"
        android:layout_height="@dimen/library_item_image_height"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/library_item_margin"
        android:contentDescription="@string/library_item_image_description" />

    <TextView
        android:id="@+id/library_item_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/library_item_image_height"
        android:layout_margin="@dimen/library_item_margin"
        android:layout_toEndOf="@id/library_item_image"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/library_item_margin"
        android:textColor="@color/black"
        android:textSize="@dimen/library_item_text_size" />

</RelativeLayout>