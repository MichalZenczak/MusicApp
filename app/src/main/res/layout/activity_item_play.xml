<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/activity_item_play_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center">

        <TextView
            android:id="@+id/activity_item_play_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/library_item_margin"
            android:textSize="@dimen/library_item_text_size" />

        <TextView
            android:id="@+id/activity_item_play_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_item_play_text1"
            android:textSize="@dimen/library_item_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:id="@+id/button_play"
            android:layout_width="@dimen/library_item_image_width"
            android:layout_height="@dimen/library_item_image_height"
            android:layout_toStartOf="@id/button_next"
            android:background="@drawable/ic_play_arrow_black_24dp" />

        <Button
            android:id="@+id/button_stop"
            android:layout_width="@dimen/library_item_image_width"
            android:layout_height="@dimen/library_item_image_height"
            android:layout_toStartOf="@id/button_play"
            android:background="@drawable/ic_stop_black_24dp" />

        <Button
            android:id="@+id/button_previous"
            android:layout_width="@dimen/library_item_image_width"
            android:layout_height="@dimen/library_item_image_height"
            android:layout_toStartOf="@id/button_stop"
            android:background="@drawable/ic_skip_previous_black_24dp" />

        <Button
            android:id="@+id/button_next"
            android:layout_width="@dimen/library_item_image_width"
            android:layout_height="@dimen/library_item_image_height"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_skip_next_black_24dp" />

    </RelativeLayout>
</LinearLayout>