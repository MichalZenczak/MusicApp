<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="@dimen/library_item_image_width"
        android:layout_height="@dimen/library_item_image_width"
        android:layout_margin="@dimen/library_item_margin"
        android:layout_alignParentStart="true"/>

    <LinearLayout
        android:layout_toEndOf="@id/item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_text_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_text_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</RelativeLayout>